<p style="color: green"><%= notice %></p>

<p><strong>Data: </strong><%= data_br(Date.today)  %></p>
<p><%= nome_aplicacao %></p>
<h1><%=  t("coins.title.coin") %></h1>

<table>
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
    </tr>
  </thead>
</table>

<div id="coins">
  <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td> <%= image_tag coin.url_image, width: 25, heigth: 25 %> </td>
    </tr>
    <p>
      <%= link_to t("coins.links.show_coin"), coin %>
    </p>
  <% end %>
</div>

<%= link_to t("coins.links.new_coin"), new_coin_path %>
