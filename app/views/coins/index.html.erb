<p style="color: green"><%= notice %></p>
<p><strong>Data: </strong><%= data_br(Date.today)  %></p>
<p><%= nome_aplicacao %></p>
<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>
    </tr>
  </thead>
</table>

<div id="coins">
  <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td> <%= image_tag coin.url_image, width: 25, heigth: 25 %> </td>
    </tr>
    <p>
      <%= link_to "Show this coin", coin %>
    </p>
  <% end %>
</div>

<%= link_to "New coin", new_coin_path %>
